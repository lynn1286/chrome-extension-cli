{
  "name": "@lynn1286/chrome-extension-cli",
  "version": "2.1.0",
  "description": "一个用于创建 Chrome Extension MV3 项目的脚手架工具",
  "main": "dist/index.js",
  "bin": {
    "chrome-cli": "dist/index.js"
  },
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "chrome",
    "extension",
    "mv3",
    "cli",
    "scaffold"
  ],
  "author": "lynn1286",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lynn1286/chrome-extension-cli.git"
  },
  "bugs": {
    "url": "https://github.com/lynn1286/chrome-extension-cli/issues"
  },
  "homepage": "https://github.com/lynn1286/chrome-extension-cli#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "download-git-repo": "^3.0.2",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.5",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "rollup": "^3.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
